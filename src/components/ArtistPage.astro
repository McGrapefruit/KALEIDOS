---
import type { Artist } from '../types/Artist';
import type { Gallery } from '../types/Gallery'; 
import ArtistSidebar from './ArtistSidebar.astro';
import GalleryPreviews from './GalleryPreviews.astro';

interface Props {
  artist: Artist;
  galleries: Gallery[];
}

const { artist, galleries } = Astro.props as Props;
---



<div class="artist-page container mx-auto p-8 md:p-12 lg:p-16 xs:px-4 xs:py-6 bg-white">
  <div class="flex flex-wrap -mx-4">
    <!-- Sidebar Section -->
    <div class="w-full md:w-1/4 xl:w-1/5 px-4 mb-8 md:mb-0 xs:mb-4">
      <ArtistSidebar artist={artist} galleries={galleries} />
    </div>

    <!-- Main Content Section -->
    <div class="w-full md:w-3/4 xl:w-4/5 px-4 xs:px-2">
      {artist.bio && (
        <div class="flex items-center justify-between gap-8 mb-12 xs:mb-8">
          <!-- Bio Image Section -->
          {artist.bioImage && (
            <div class="flex-shrink-0 w-48 h-48 rounded-xl overflow-hidden shadow-lg">
              <img 
                src={artist.bioImage} 
                alt={artist.name} 
                class="w-full h-full object-cover"
              />
            </div>
          )}

          <!-- Bio Text Section -->
          <div class="flex-1">
            <h2 class="text-3xl font-extrabold text-gray-900 mb-4 xs:text-2xl">About {artist.name}</h2>
            <p class="text-lg text-gray-700 leading-relaxed xs:text-base">{artist.bio}</p>
          </div>
        </div>
      )}

      <!-- Gallery Previews Section -->
      <GalleryPreviews galleries={galleries} />
    </div>
  </div>
</div>