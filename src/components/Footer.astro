---
import "../styles/global.css";
---

<footer class="ps-5" style="background: var(--kaleidos); padding: 2rem;">
  <section class="flex flex-col md:flex-row items-start justify-between">
    <div class="flex items-center gap-6">
      <div class="containerimage overflow-hidden">
        <img src="/logos/KALEIDOS_1000x1500_BW.png" alt="KALEIDOS logo" class="py-10 w-24 h-auto"/>
      </div>
      <div class="text overflow-hidden">
        <p class="text-lg">Text to be displayed on the right of the image.</p>
      </div>
    </div>
    <form class="mt-8 md:mt-0 flex flex-col gap-4 md:w-1/2 xl:w-1/3">
      <h2 class="text-xl font-bold">Stay Updated</h2>
      <label for="email" class="sr-only">Email</label>
      <input 
        type="email" 
        id="email" 
        name="email" 
        placeholder="Enter your email" 
        class="p-2 border rounded-md w-full"
        required 
      />
      <button 
        type="submit" 
        class="bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700"
      >
        Subscribe
      </button>
    </form>
  </section>
  <section class="mt-8 text-center text-sm">
    <small>
      Copyright KALEIDOS &copy; <span id="copyright"></span> | All rights reserved
    </small>
  </section>
</footer>

<script>
  document.querySelector("#copyright").textContent = new Date().getFullYear().toString();
</script>
